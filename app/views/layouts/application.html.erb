<!DOCTYPE html>
<html>
  <head>
    <title>review</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
   <body>
   	<header class="navbar navbar-inverse">
   	<div class="container">
   		<nav class="nav navbar-nav navbar-left">
          <h3>Bookers</h3>
        </nav>
   		<nav class="nav navbar-nav navbar-right">
   			<ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li><%= link_to ' Home',user_path(current_user.id) %></li>
          <li><%= link_to ' Users',users_path,class: "glyphicon glyphicon-user" %></li>
          <li><%= link_to ' Books',books_path, class: "glyphicon glyphicon-book" %></li>
          <li><%= link_to 'Logout',destroy_user_session_path,  class: "glyphicon glyphicon-log-out" %></li>
          <% else %>
   				<li><%= link_to ' home',root_path, class: "glyphicon glyphicon-home" %></li>
   				<li><%= link_to ' about', home_about_path, class: "glyphicon glyphicon-link" %></li>
   				<li><%= link_to ' sign up',new_user_registration_path, class: "glyphicon glyphicon-edit" %></li>
   				<li><%= link_to ' log in', new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
          <% end %>
   			</ul>
   		</nav>
   	</div>
   	</header>
   	<!-- /header -->
    <%= yield %>
  </body>
</html>
